{
  "manifest_version": 3,
  "name": "NammaSuraksha - Phishing Detector",
  "version": "1.0.0",
  "description": "A browser extension to detect and prevent phishing attacks",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "128": "icons/icon.png"
  }
} 